<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_700"
    tools:context="com.appspot.v2_dot_apt_black_app.connexus_app.AllStreamActivity">

    <GridLayout
        android:id="@+id/all_streams_grid"
        android:layout_width="352dp"
        android:layout_height="313dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:alignmentMode="alignBounds"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

    </GridLayout>

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="153dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/all_streams_grid"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="338dp"
        tools:layout_editor_absoluteX="-10dp">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.951">

            <SearchView
                android:id="@+id/search"
                android:layout_width="227dp"
                android:layout_height="37dp"
                android:layout_column="0"
                android:layout_row="0"
                android:background="?android:attr/colorBackground"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="366dp"></SearchView>

            <ImageButton
                android:id="@+id/button_nearby"
                android:layout_width="49dp"
                android:layout_height="39dp"
                android:layout_column="1"
                android:layout_marginLeft="50dp"
                android:layout_row="0"
                android:background="@drawable/world"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:elevation="1dp" />

        </GridLayout>

        <Button
            android:id="@+id/search_button"
            android:layout_width="238dp"
            android:layout_height="36dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Search"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="388dp" />

        <Button
            android:id="@+id/subscribed_button"
            android:layout_width="239dp"
            android:layout_height="36dp"
            android:layout_column="0"
            android:layout_row="3"
            android:text="My Subscribed Streams"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="71dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
