<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_700"
    tools:context="com.appspot.v2_dot_apt_black_app.connexus_app.CameraActivity">

    <SurfaceView android:id="@+id/surface_camera"

        android:layout_width="343dp" android:layout_height="275dp"

        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_weight="0.83"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2">

    </SurfaceView>

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="359dp"
        android:layout_height="156dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageButton
            android:id="@+id/button_takepicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            app:srcCompat="@mipmap/photo" />

        <Button
            android:id="@+id/button_streams"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="1"
            android:text="Streams" />

        <Button
            android:id="@+id/button_usepicture"
            android:layout_width="114dp"
            android:layout_height="67dp"
            android:layout_column="2"
            android:layout_marginRight="50dp"
            android:layout_row="0"
            android:text="Use This Picture" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
